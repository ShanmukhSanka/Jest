<Paper
  elevation={0}
  sx={{
    width: "92%",
    maxWidth: "1500px",
    mx: "auto",
    mt: 3,
    p: { xs: 2.5, sm: 3.5, md: 4 },

    // glass container
    background: "rgba(255, 255, 255, 0.05)",
    backdropFilter: "blur(12px)",
